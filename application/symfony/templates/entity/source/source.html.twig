{% extends "frames/default.html.twig" %}
{% set entity = action_template_data_store_service.getData('read') %}
{% block title %}
	{{ 'Source'|trans }}: {% if entity.hasSlug %}{{ entity.slug }}{% endif %}#{{ entity.id }}
{% endblock %}
{% block content %}
<h1>
	{{ 'Source'|trans }}: {% if entity.hasSlug %}{{ entity.slug }}{% endif %}#{{ entity.id }}
</h1>
<div id="accordion">
{% for action in layer_action_map.getActions('source') %}
